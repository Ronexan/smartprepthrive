---
interface Props {
  title: string;
}

const { title } = Astro.props
---

<section class="relative w-full h-[40vh] sm:h-[56vh] bg-[url('/kids.jpg')] bg-cover bg-center">
  <div class="absolute inset-0 bg-black/70 flex justify-center items-center text-white">
    <h1 class="text-6xl font-bold">{title}</h1>
  </div>
</section>